<div>
    <div id="km-camping-time-tracker" class="km-row">
        <button id="km-camping-minus-hour" type="button" data-hours="2">
            -2h
        </button>
        <button id="km-camping-minus-hour" type="button" data-hours="1">
            -1h
        </button>
        <button id="km-camping-minus-hexploration" type="button">-1
        </button>
        <div id="km-camping-time">
            <div id="km-camping-time-wrapper">
                <i class="fa-regular fa-sun"></i>
                <div>13:45</div>
            </div>
        </div>
        <button id="km-camping-plus-hexploration" type="button">+1</button>
        <button id="km-camping-plus-hour" type="button" data-hours="1">
            +1h
        </button>
        <button id="km-camping-plus-hour" type="button" data-hours="2">
            +2h
        </button>
    </div>
    <div id="km-camping-hexploration" class="km-row">
        <div><b>Adventuring For: </b> 05:00</div>
        <div><b>Hexploration Activities:</b> 1/3</div>
        <div><label>Region: <select>
            <option>Rostland</option>
        </select></label></div>
        <div id="km-camping-encounter">
            <button type="button"><i class="fa-solid fa-minus"></i></button>
            <div><b>Encounter DC:</b> 12</div>
            <button type="button"><i class="fa-solid fa-plus"></i></button>
            <button type="button"><i class="fa-solid fa-rotate-left"></i></button>
            <button type="button" data-action="roll-encounter"><i class="fa-solid fa-skull"></i></button>
            <button type="button"><i class="fa-solid fa-dice-d20"></i><i class="fa-solid fa-skull"></i></button>
        </div>
    </div>
    <ul class="km-camping-actors">
        <li><img src="/systems/pf2e/icons/iconics/AmiriFull.webp"></li>
        <li><img src="/systems/pf2e/icons/iconics/HarskFull.webp"></li>
        <li><img src="/systems/pf2e/icons/iconics/LiniFull.webp"></li>
        <li><img src="/systems/pf2e/icons/iconics/SeelahFull.webp"></li>
        <li><img src="/systems/pf2e/icons/iconics/EzrenFull.webp"></li>
        <li><img src="/systems/pf2e/icons/iconics/FumbusFull.webp"></li>
        <li><img src="/systems/pf2e/icons/iconics/LemFull.webp"></li>
        <li><img src="/systems/pf2e/icons/iconics/QuinnFull.webp"></li>
        <li><img src="/systems/pf2e/icons/iconics/ValerosFull.webp"></li>
        <li class="km-camping-add-actor">
            <span>Drop Actor from Sidebar</span>
            <i class="fa-solid fa-plus"></i>
        </li>
    </ul>
    <!-- add km-camping-day class to switch to different bg-->
    <div id="km-camping-content">
        <button class="km-camping-previous"><i class="fa-solid fa-chevron-left"></i></button>
        <div class="km-camping-activities-wrapper">
            <h1>Prepare Camp</h1>
            <div class="km-camping-activities">
                {{#each size}}
                    <div class="km-camping-activity">
                        <header>Prepare Camp
                        </header>
                        <div class="km-camping-activity-portrait">
                            <button action="clear" type="button"><i class="fa-regular fa-circle-xmark"></i></button>
                            <img src="/systems/pf2e/icons/iconics/MerisielFull.webp">
                        </div>
                        <div class="km-camping-activity-check">
                            <select>
                                <option>Critical Success</option>
                            </select>
                            <button action="roll" type="button"><i class="fa-solid fa-dice-d20"></i></button>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
        <button class="km-camping-next"><i class="fa-solid fa-chevron-right"></i></button>
    </div>
</div>
