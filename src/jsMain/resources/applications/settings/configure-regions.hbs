<div>
    <div class="row">
        {{> formElement useStolenLands}}
    </div>
    {{#unless useStolenLands.value}}
        <table>
            <thead>
            <tr>
                {{#each heading}}
                    <th class="{{#each classes}}{{this}}{{/each}}">{{label}}</th>
                {{/each}}
            </tr>
            </thead>
            <tbody>
            {{#each formRows}}
                <tr>
                    {{#each this}}
                        <td>{{> formElement this}}</td>
                    {{/each}}
                    <td>
                        {{#if @index}}
                            <button
                                    data-action="delete"
                                    data-index="{{@index}}"
                                    title="Remove Row"
                            >
                                <i class="fa-solid fa-minus"></i>
                            </button>
                        {{else}}
                            <button
                                    data-action="delete"
                                    data-index="{{@index}}"
                                    title="Remove Row"
                            >
                                <i class="fa-solid fa-minus"></i>
                            </button>
                        {{/if}}
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <button data-action="add" class="full-width">Add Region</button>
    {{/unless}}
    <button data-action="save">Save</button>
</div>