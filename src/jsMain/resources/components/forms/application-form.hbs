<div>
    {{#if sections}}
        {{#each sections}}
            <fieldset>
                <legend>{{legend}}</legend>
                {{#each formRows}}
                    <div class="row">
                        {{> formElement this }}
                    </div>
                {{/each}}
            </fieldset>
        {{/each}}
    {{else}}
        {{#each formRows}}
            <div class="row">
                {{> formElement this }}
            </div>
        {{/each}}
    {{/if}}
    <button type="submit" class="full-width" data-action="save">Save</button>
</div>